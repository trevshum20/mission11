@inherits LayoutComponentBase

<div class="bg-info text-white p-2">
    <div class="container-fluid" >
        <div class="row" >
            <div class="col">
                <span class="navbar-brand m-lg-2">Book Store Administration</span>
            </div>
            <div class="col-2 text-right">
                <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
            </div>
        </div>
    </div>
</div>

@*The 2nd bootstrap edit I made for mission 11 was set a silly background image on my admin page*@
<div class="bg-image d-flex justify-content-center align-items-center"
     style="
    background-image: url('https://mdbcdn.b-cdn.net/img/new/fluid/nature/015.webp');
    height: 100vh;
  ">


    <div class="container-fluid">
        <div class="row p-2">
            <div class="col-3">
                <div class="d-grid gap-2">
                    <NavLink class="btn btn-outline-primary" href="/admin/books"
                             ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Books</NavLink>
                    <NavLink class="btn btn-outline-primary" href="/admin/transactions"
                             ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">Transactions</NavLink>
                </div>
            </div>

            <div class="col">
                @Body
            </div>
        </div>
    </div>
</div>